<%- include("../layout/head.ejs", {title: "Products Manager"})%>
<%- include("../layout/header.ejs")%>
<%- include("../layout/sidebar.ejs")%>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li><a href="/admin/configs">Quản lý cấu hình</a></li>
				<li class="active"> Sửa thông tin cấu hình </li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Sửa thông tin cấu hình</h1>
			</div>
        </div><!--/.row-->
        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-6">
                                <form action="/admin/edit-config/<%=config.id%>" role="form" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Giới thiệu MobileShop</label>
                                    <input required name="intro" class="form-control" placeholder="" value="<%=config.intro%>">
                                </div>
                                                                
                                <div class="form-group">
                                    <label>Địa chỉ </label>
                                    <input required name="address" type="text " class="form-control" value="<%=config.address%>">
                                </div>
                                <div class="form-group">
                                    <label>Dịch vụ </label>
                                    <input required name="service" type="text" class="form-control"  value="<%=config.service%>">
                                </div>    
                                <div class="form-group">
                                    <label>Hotline-số điện thoại </label>
                                    <input required name="hotline_phone" type="text" class="form-control" value="<%=config.hotline_phone%>">
                                </div>                  
                                <div class="form-group">
                                    <label>Email</label>
                                    <input required name="hotline_email" type="text" class="form-control" value="<%=config.hotline_email%>">
                                </div>  
                                <div class="form-group">
                                    <label>Footer</label>
                                    <input required name="footer" type="text" class="form-control" value="<%=config.footer%>">
                                </div>  
                             
                                
                            </div>
                            <div class="col-md-6">
                                <div style="padding-top: 10px ;" class="form-group">
                                    <label style="font-size: 1.5rem;">Yêu Cầu Logo:</label>
                                    <p>Chiều cao: <span>38px - 40px</span></p>
                                    <p>Chiều rộng: <span>200px - 220px</span></p>
                                  </div>
                                  <div class="form-group">
                                    <label>Ảnh logo header</label>
                                    <input required name="logo_header" type="file">
                                    <br>
                                    <div>
                                        <img width="160px" src="../uploads/images/<%=config.logo_header%>">
                                    </div>
                                  </div>
                    
                                  <div class="form-group">
                                    <label>Ảnh logo footer</label>
                                    <input required name="logo_footer" type="file">
                                    </br>
                                    <div>
                                        <img width="160px" src="../uploads/images/<%=config.logo_footer%>">
                                    </div>
                                  </div>
                                </div>
                            
                                <button name="sbm" type="submit" class="btn btn-success">Sửa</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div><!-- /.col-->
            </div><!-- /.row -->
		
	</div>	<!--/.main-->	
<%- include("../layout/footer.ejs")%>