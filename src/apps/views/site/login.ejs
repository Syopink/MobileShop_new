<%- include("layouts/head.ejs", {title:"Đăng nhập"})%> 
<%- include("layouts/header.ejs")%> 
<%- include("layouts/menu.ejs")%>
<%- include("layouts/slider.ejs")%> 

<!-- Body -->

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card">
                    <div class="card-header" style="font-size: 17px;">Đăng nhập</div>
                    <div class="card-body">
                        <!-- Form đăng nhập -->
                        <form role="form" method="post">
                            <div class="form-group" >
                                <label for="exampleInputEmail1" >Địa chỉ email</label>
                                <input type="email" required class="form-control" name="email" placeholder="Nhập email" autofocus>
                                <%if(data && data.error){%>
                                    <div class="alert alert-danger">
                                        <%=data.error%>
                                    </div>
                                    <%}%>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mật khẩu</label>
                                <input type="password" required class="form-control" name="password" placeholder="Nhập mật khẩu" value="">
                            </div>
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </form>
                        <!-- Kết thúc form đăng nhập -->
                    </div>
                </div>
                <div class="mt-3">
                    <p style="margin-left: 50px;">Bạn chưa có tài khoản? <a href="/register">Đăng ký ngay</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Body -->
<%- include("layouts/sidebar.ejs")%>
<%- include("layouts/footer.ejs")%>